pipeline {
  agent any
  tools {
    maven 'mvn396'
    jdk 'temurin-jdk17'
  }
  stages {
    stage('Preparation') {
      steps{
        deleteDir()
        sh 'git clone git@github.com:opengeospatial/ets-gpkg12-nsg.git .'
      }
    }
    stage('Build') {
      steps{
        sh 'mvn --version'
        sh 'mvn clean install site'
      }
    }
    stage('Results') {
      steps{
        junit '**/target/surefire-reports/TEST-*.xml'
        archive 'target/*'
      }
    }
  }
}
